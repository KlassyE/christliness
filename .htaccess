<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redirect requests to the dist folder
  RewriteRule ^$ dist/index.html [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/dist/
  RewriteRule ^(.*)$ dist/$1 [L]
</IfModule>
