<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 2. explicit Asset Handling
    RewriteRule ^assets/(.*)$ dist/assets/$1 [L,QSA]

    # 3. Allow access to existing files in root...
    # BUT EXCLUDE the source index.html and src/ folder!
    # We want to serve these from 'dist/' instead.
    RewriteCond %{REQUEST_URI} !^/index\.html$
    RewriteCond %{REQUEST_URI} !^/src/
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 4. SPA Fallback: Everything else goes to index.html in dist
    RewriteRule ^ dist/index.html [L]
</IfModule>
