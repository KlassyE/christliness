<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # If the request is NOT for a file or directory that exists in the root...
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # ...and it hasn't already been redirected to dist...
    RewriteCond %{REQUEST_URI} !^/dist/
    # ...rewrite it to the dist folder.
    RewriteRule ^(.*)$ dist/$1 [L]
    
    # If the request IS for the root (/), explicitly serve dist/index.html
    RewriteRule ^$ dist/index.html [L]
</IfModule>
