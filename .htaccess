<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. Allow access to existing files in root (like robots.txt)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 2. Rewrite root-level asset requests to /dist folder
    # This catches /assets/index.js and redirects it to /dist/assets/index.js
    RewriteCond %{REQUEST_URI} !^/dist/
    RewriteRule ^(assets/.*)$ dist/$1 [L]

    # 3. SPA Fallback: Everything else goes to index.html in dist
    RewriteRule ^ dist/index.html [L]
</IfModule>
